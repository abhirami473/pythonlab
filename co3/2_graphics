#implement.py

from grapics.circle import *
import grapics.rect
import grapics.threeD.sphere
from grapics.threeD import cuboid
l =20
b =30
h =35
print("Area of Rectangle : "+str(grapics.rect.getPerimeter(l,b)))
print("Area of Sphere : "+str(grapics.threeD.sphere.getArea(l)))
print("Area of Cuboid : "+str(cuboid.getArea(l,b,h)))
print("Area of Circle : "+str(area(70)))

#circle.py

import math
def peri(r):
    p=2*math.pi*r
    return p
def area(r):
    a=math.pi*r*r
    return a
    
 #rect.py
 
 def getPerimeter(l,b):
  perimeter = 2*(l+b)
  return perimeter
def getArea(l,b):
   area = l*b
   return area
   
 #sphere.py
 
 import math
def getPerimeter(radius):
 perimeter = 2*math.pi*radius
 return perimeter
def getArea(radius):
 area = 4*math.pi*radius*radius
 return area
 
 #cuboid
 
 def getPerimeter(length,breadth,height):
 perimeter = 4*(length+breadth+height)
 return perimeter
def getArea(length,breadth,height):
 area = 2*((length*breadth)+(length*height)+(breadth*height))
 return area
